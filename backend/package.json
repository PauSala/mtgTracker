    "promised-sqlite3": "^2.1.0",
    "sqlite3": "^5.1.6",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jasmine": "^4.3.3",
    "@types/node": "^20.3.1",
