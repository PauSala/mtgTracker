{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "newLine": "LF",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist/src",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "jasmine"]
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "exclude": ["node_modules"]
}
